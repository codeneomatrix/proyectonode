extends ./layout.jade
block content
	div(class="panel panel-info center-block")
		div( class="span6" )
			each x in comentario
				form(class="form-signin" method="POST" action="/comentario/#{x.id}?_method=put")
					h2(class="form-signin-heading") Nombre
					input(type="text" required value="#{x.nombre}" name="nombre" class="input-block-level")
					h5 Email
					input(type="text" required value="#{x.email}" name="correo" class="col_6" class="input-block-level")
					input(type="text" required name="idpelicula" value="#{x.idpelicula}"  class="col_6" class="input-block-level")
					textarea(type="text" required  name="comentario"  placeholder="Sinopsis" class="input-block-level") #{x.comentario}
					button(class="btn btn-large btn-primary" type="submit") Crear

	
